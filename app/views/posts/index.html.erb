<p style="color: green"><%= notice %></p>
<h1>Posts</h1>
<%= line_chart Post.group_by_day(:created_at, range: 1.month.ago.midnight..Time.now).sum(:views) %>
<%= column_chart Post.group_by_day(:created_at, format: "%a").sum(:views) %>
<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>
<%= link_to "New post", new_post_path %>
